<% if params[:controller] == 'about' %>
    <div class="well">
      <h3>Location Info:</h3>
        <ul>
          <li>Bookstore App</li>
          <li>Your computer</li>
          <li>On the internet</li>
          <li><a href="http://www.something-weird.heroku.com">www.something-weird.heroku.com</a></li>
    </div>
<% end %>

<% if params[:controller] == 'books' && params[:action] == 'index' || params[:action] == 'show' %>
  <div class="list-group">
    <h2>Categories:</h2>
      <% @categories.each do |category| %>
        <%= link_to category.name, category_path(category.id), class: "list-group-item" %>
      <% end %>
  </div>
<% end %>
